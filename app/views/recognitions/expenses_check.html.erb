<h3>確認及び承認画面</h3>
<%= @month.year %>年<%= @month.month %>月<br>
<% if @fare_show.any? %>
<table>
<% @fare_show.each do |one| %>
<tr>
<td><%= one.day %>日</td>	
<td>訪問先<%= one.visiting_company %></td>
<td>出発駅<%= one.start_station %></td>
<td>到着駅<%= one.arrival_station %></td>
<td><%= one.fare %>円</td>
<td>領収書：<% if one.recipt == 1 %>
	         有
	       <% else %>
             無
　　　　　　 <% end %>
</td>
<td>交通手段：<% if one.vehicle == "0" %>
	          電車・地下鉄
　　　　　　  <% elsif one.vehicle == "1" %>
              タクシー
            <% elsif one.vehicle == "2" %>
              新幹線
            <% elsif one.vehicle == "3" %>
              バス
            <% elsif one.vehicle == "4" %>
              飛行機
            <% elsif one.vehicle == "5" %>
              その他
　　　　　　  <% end %>
</td>
</tr>
<% end %>
</table>
<% else %>
登録された交通費がありません
<% end %>

<% if @month.recognition_state == 0 %>
  <%= button_to "承認", { :action => "recognition", :id => @month.id }, :method => :put %>
  <%= button_to "差し戻し", { :action => "rejection", :id => @month.id }, :method => :put %>
<% elsif @month.recognition_state == 1 %>
  <%= button_to "差し戻し", { :action => "rejection", :id => @month.id }, :method => :put %>
<% else %>
  <%= button_to "承認", { :action => "recognition", :id => @month.id }, :method => :put %>
<% end %>

<%= link_to 'Back', recognitions_path %>